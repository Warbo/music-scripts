#! /usr/bin/env nix-shell
#! nix-shell -i bash -p scummvm bash

SIMON="/home/chris/System/Games/Simon the Sorcerer"
if mount | grep Simon > /dev/null
then
    echo "Simon ISO already mounted" >> /dev/stderr
else
    echo "Simon ISO not mounted yet" >> /dev/stderr
    sudo mount "$SIMON/Simon the Sorcerer.iso" "$SIMON/mount"
fi

scummvm -p "$SIMON/mount" --subtitles simon1
