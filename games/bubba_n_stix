#! /usr/bin/env nix-shell
#! nix-shell -i bash -p bash uae

BASE="/home/chris/System/Games/Bubba and Stix/Bubba 'N' Stix - Disk"
DF0="$BASE 1 of 2.adf"
DF1="$BASE 2 of 2.adf"

for F in "$DF0" "$DF1"
do
    [[ -e "$F" ]] || {
        echo "Couldn't find '$F'" >> /dev/stderr
        exit 1
    }
done

# -x No X cursor
# -G Don't launch GUI first
# -T Use SHM extension for speed
uae -x -T -G -0 "$DF0" -1 "$DF1"
