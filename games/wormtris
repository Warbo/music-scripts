#! /usr/bin/env nix-shell
#! nix-shell -i bash -p bash uae

GAMES="'Games':'/home/chris/Backups/files_old/Random/Computing/Amiga/Software/AmigaOS/Games'"

DF0="/home/chris/System/Games/Workbench3.1/WB-3_1.ADF"

[[ -e "$DF0" ]] || {
    echo "Couldn't find disk '$DF0'" >> /dev/stderr
    exit 1
}

# -x No X cursor
# -G Don't launch GUI first
# -T Use SHM extension for speed
uae -x -G -T -m "$GAMES" -0 "$DF0"
