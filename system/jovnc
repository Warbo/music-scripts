#! /usr/bin/env nix-shell
#! nix-shell -i bash -p tightvnc

[[ -n "$JO_HOST" ]] || {
    JO_HOST=debian.local
}

ssh -t jo@"$JO_HOST" "pkill x11vnc; DISPLAY=:0 x11vnc" &

sleep 3

if OUTPUT=$(ping -c 1 "$JO_HOST")
then
  ADDR=$(echo "$OUTPUT" | grep -o "192\.168\.[0-9]*\.[0-9]*" | head -n1)
  echo "ADDRESS: $ADDR"
  vncviewer "$ADDR"
fi
